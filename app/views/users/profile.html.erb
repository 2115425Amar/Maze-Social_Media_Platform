<body class="flex ">

 <div class="" >
           <%= render 'devise/shared/navbar' %>
          </div>

  <!-- Main Content -->
  <div id="main-content" class="flex-1  transition-all duration-300 pt-20  ">

    <!-- Main Content -->
    <div class="w3-container " >
      <div class="rounded-xl flex flex-col">

      <div class="bg-gray-200  w-[100%]  md:rounded-xl p-4 md:mt-7 mx-auto h-screen ">
        <%= form_for(@user, url: profile_path, method: :patch, html: { multipart: true }) do |f| %>
          <!-- Avatar Upload -->
          <div class="mx-auto w-32 text-center">
            <div class="w-32 h-32 group rounded-full cursor-pointer transition duration-500 bg-cover bg-center relative"
              style="background-image: url('<%= @user.avatar_public_id.present? ? Cloudinary::Utils.cloudinary_url(@user.avatar_public_id, width: 150, height: 150, crop: :fill) : asset_path('amargupta.jpeg') %>');">
              <div class="absolute inset-0 bg-black bg-opacity-30 rounded-full"></div>
               
            </div>
          </div>

          <div>
            <h2 class="text-xl md:text-2xl font-semibold mb-1">Profile</h2>
            <p class="text-sm text-gray-400">Update your profile information.</p>
          </div>

          <!-- Profile Form -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 flex flex-row mt-4">
            <div>
              <%= f.label :first_name, "First Name", class: "block text-sm mb-1" %>
              <%= f.text_field :first_name, class: "text-black w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
            </div>
            <div>
              <%= f.label :last_name, "Last Name", class: "block text-sm mb-1" %>
              <%= f.text_field :last_name, class: "text-black w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
            </div>
        
            <div>
              <%= f.label :email, "Email", class: "block text-sm mb-1" %>
              <%= f.email_field :email, class: "text-black w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
            </div>
            <div>
              <%= f.label :phone_number, "Phone Number", class: "block text-sm mb-1" %>
              <%= f.telephone_field :phone_number, class: "text-black w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
            </div>
          </div>

          
        <% end %>

       
      </div>

      </div>
    </div>
  </div>


  
  </div>

</body>
