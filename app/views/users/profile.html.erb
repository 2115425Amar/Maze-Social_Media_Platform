<body class="flex">
   <!-- Sidebar Toggle Button (For Non-Admins) -->
   <% unless current_user&.admin? %>
      <button id="sidebarToggle" class="fixed top-5 left-4 z-50 bg-blue-500 text-white px-4 py-2 rounded">â˜°</button>
   <% end %>

   <!-- Main Content -->
   <div id="main-content" class="flex-1 p-6 transition-all duration-300">
     
         <%= render 'devise/shared/navbar', 
                  title: 'Maze', 
                  search_enabled: true, 
                  user_photo: current_user&.avatar_url %>
      

      <!-- Main Content -->
      <div class="w3-container">
         <div class="bg-gray-200 rounded-xl ">

            <div class="p-4 m-6 rounded-xl">
