<body class="flex">
   <!--left sidebar-->
   <% if current_user&.admin? %>
   <!-- Left Sidebar (Admin only) -->
   <div class="fixed top-0 left-0 w-[15%] h-full bg-white shadow-lg p-4">
      <%= render 'devise/shared/sidebar' %>
   </div>
   <% end %>

   <!-- Main Content -->
   <div class="flex-1 p-6 mb-4"
      style="margin-left: <% if current_user&.admin? %>15%<% else %>0%<% end %>;">
      <!-- Navbar -->
      <% if current_user&.admin? %>
      <div class="w-[80%] border border-black rounded-md">
         <div class="relative flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute w-5 h-5 top-2.5 left-2.5 text-slate-600">
               <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z" clip-rule="evenodd" />
            </svg>
            <input
               class=" bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md pl-10 pr-3 py-2 transition duration-300 ease focus:outline-none focus:border-slate-400 hover:border-slate-300 shadow-sm focus:shadow"
               placeholder="Search for something here..." 
               />
         </div>
      </div>
      <% else %>
      <%= render 'devise/shared/navbar', 
         title: 'Maze', 
         search_enabled: true, 
         user_photo: current_user&.avatar_url %>
      <% end %>
      <!--Nabar END-->

      <!--Main Content start-->
     <div class="p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold">Profile</h2>
  <p>Name: <%= current_user.first_name %> <%= current_user.last_name %></p>
  <p>Email: <%= current_user.email %></p>
</div>


      <!--Main Content end-->
   </div>
  
</body>