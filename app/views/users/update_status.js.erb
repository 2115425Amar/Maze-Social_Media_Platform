const statusCell = document.getElementById("user-status-<%= @user.id %>");
if (statusCell) {
  statusCell.innerHTML = `
    <a href="<%= update_status_user_path(@user, active: !@user.active?) %>" 
       data-remote="true" data-method="patch" class="<%= @user.active? ? 'text-green-500' : 'text-red-500' %>">
      ‚óè
    </a>

    <span class="py-1 px-3 rounded-full text-xs <%= @user.active? ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
      <%= @user.active? ? 'Active' : 'Inactive' %>
    </span>
  `;
}
