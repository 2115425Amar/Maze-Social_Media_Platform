<body class="flex">
  <!-- Sidebar Toggle Button (For Non-Admins) -->
  <% unless current_user&.admin? %>
    <button id="sidebarToggle" class="fixed top-4 left-4 z-50 bg-blue-500 text-white px-4 py-2 rounded">
      â˜° 
    </button>
  <% end %>

  <!-- Main Content -->
  <div id="main-content" class="flex-1 p-6 transition-all duration-300"
       style="margin-left: <% if current_user&.admin? %>15%<% else %>0%<% end %>;
              margin-right: <% if current_user&.admin? %>20%<% else %>0%<% end %>;">
    
    <!-- Navbar -->
    <% if current_user&.admin? %>
      <div class="w-full border border-black rounded-md">
        <div class="relative flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute w-5 h-5 top-2.5 left-2.5 text-slate-600">
            <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z" clip-rule="evenodd" />
          </svg>
          <input class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md pl-10 pr-3 py-2 transition duration-300 ease focus:outline-none focus:border-slate-400 hover:border-slate-300 shadow-sm focus:shadow" 
                 placeholder="Search for something here..." />
        </div>
      </div>
    <% else %>
      <%= render 'devise/shared/navbar', 
            title: 'Maze', 
            search_enabled: true, 
            user_photo: current_user&.avatar_url %>
    <% end %>

    <!-- Main Content -->
  <div class="w3-container">
      <div class="bg-gray-200 rounded-xl">
        <!-- Post Form -->
        <div class="bg-gray-200 p-4 m-6 rounded-xl">
          <%= form_with(model: Post.new, url: posts_path, local: true) do |form| %>
            <div class="bg-white rounded-lg mt-8 mx-[2%] my-5">
              <div class="p-5 mx-6">
                <%= form.text_area :description, placeholder: "What's happening...?", 
                     class: "w-full px-4 py-3 bg-[#F5F6F8] rounded-xl focus:outline-none border border-black" %>
              </div>
              <div class="flex flex-col justify-between p-4 border-[#3333334D] mx-6">
                <span class="block text-base font-medium text-gray-900">Visibility</span>
                <div class="flex gap-4 pt-1 mt-2">
                  <div class="flex items-center">
                    <%= form.radio_button :public, "true", checked: true %>
                    <%= form.label :public_true, "Public", class: "text-gray-900 text-sm md:text-base ml-2" %>
                  </div>
                  <div class="flex items-center">
                    <%= form.radio_button :public, "false" %>
                    <%= form.label :public_false, "Private", class: "text-gray-900 text-sm md:text-base ml-2" %>
                  </div>
                </div>
              </div>
              <div class="flex justify-between p-4 border-[#3333334D] mx-6">
                <div class="flex gap-6 text-gray-600">
                  <button class="flex items-center gap-2">
                    <img src="<%= asset_path('video.svg')%>" class="w-5" alt="Live Video">
                    <span class="hidden sm:inline">Video</span>
                  </button>
                  <button class="flex items-center gap-2">
                    <img src="<%= asset_path('photo.svg')%>" class="w-5" alt="Photo/Video">
                    <span class="hidden sm:inline">Photo/Video</span>
                  </button>
                  <button class="flex items-center gap-2">
                    <img src="<%= asset_path('feeling.svg')%>" class="w-5" alt="Feeling">
                    <span class="hidden sm:inline">Feeling</span>
                  </button>
                </div>
                <%= form.submit "Post", class: "px-12 py-3 bg-[#4378DB] text-white font-medium rounded-lg" %>
              </div>
            </div>
          <% end %>
          <!-- Post Feed -->
          <div class="space-y-4">
            <% if @posts.present? %>
              <% @posts.each do |post| %>
                <div class="mx-[2%] bg-white rounded-xl p-4">
                  <div class="flex justify-between items-start mb-3 mx-2">
                    <div>
                      <h3 class="text-lg mb-1"><%= post.user.first_name %> <%= post.user.last_name %></h3>
                      <p class="text-sm text-[#666666]"> <%= time_ago_in_words(post.created_at) %> ago, <%= post.public ? "Public" : "Private" %></p>
                    </div>
                    <div class="flex gap-3">
                      <div class="relative inline-block gap-1" x-data="{ open: false }">
                        <div class="w-12">
                          <button @click="open = !open" type="button" class="inline-flex justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 hover:cursor-pointer text-sm font-semibold text-gray-900 ring-gray-400 ring-inset hover:bg-gray-50" id="menu-button" aria-expanded="true" aria-haspopup="true">
                            <img src="<%= asset_path('dots.svg') %>" alt="">
                          </button>
                        </div>
                        <div x-show="open" @click.outside="open = false" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 z-10 mt-2 w-32 md:w-56 origin-top-right rounded-md bg-white ring-1 shadow-lg ring-black/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                          <div class="py-1" role="none">
                            <%= link_to "Show", "posts/#{post.id}", class: "block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800" %>
                            <%= link_to "Edit", "posts/#{post.id}/edit", class: "block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800" %>
                            <%= link_to "Delete", post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800" %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <p class="text-[#666666] mb-4 mx-2"><%= post.description %></p>
                  <div class="text-sm text-[#666666] mb-3 mx-2">
                    <%= post.likes.count %> Likes â€¢ <%= post.comments.count %> Comments
                  </div>
                  <div class="flex gap-12 py-1 border-y border-[#3333334D] mx-2">
                    <%= button_to post_likes_path(post), method: :post, remote: true, class: "like-button", id: "like-button-#{post.id}" do %>
                      <div class="flex flex-row">
                        <span>Like</span>
                      </div>
                    <% end %>
                    <button class="text-gray-600">ðŸ’¬ Comment</button>
                  </div>
                  <%= form_with(model: [post, Comment.new], url: post_comments_path(post), local: true, class: "mt-3") do |form| %>
                    <div class="flex space-x-2 p-2 bg-gray-100 rounded-lg">
                      <%= form.text_field :description, placeholder: "Write a comment...", class: "w-[70%] flex-1 p-2 border rounded-lg focus:outline-none" %>
                      <button class="bg-[#EAF4FF] hover:bg-[#99caff] p-3 rounded-lg text-lg font-medium hover:cursor-pointer">
                        <img src="<%= asset_path('send.svg')%>" class="w-6" alt="arrow">
                      </button>
                    </div>
                  <% end %>
                  <div class="mt-4 mx-6 space-y-4" x-data="{ expanded: false }">
                    <h1 class="w-full font-medium text-gray-400 text-lg md:text-2xl">Comments</h1>
                    <hr class="w-full border-gray-300">
                    <% if post.comments.any? %>
                      <div>
                        <% post.comments.each_with_index do |comment, index| %>
                          <div x-show="expanded || <%= index < 2 %>" class="flex justify-between items-center bg-gray-200 rounded">
                            <div class="flex flex-col p-2">
                              <strong><%= comment.user.first_name %> <%= comment.user.last_name %></strong>
                              <div><%= comment.content %></div>
                            </div>
                            <div class="flex flex-col">
                              <span>
                                <img src="<%= asset_path('dil.svg') %>" alt="Like" class="w-5 h-5 mr-1">
                              </span>
                              <span class="text-sm text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <hr class="w-full border-gray-300">
                      <% if post.comments.count > 3 %>
                        <div class="flex justify-end">
                          <button @click="expanded = !expanded" class="p-1 flex items-center text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 transition">
                            <span x-text="expanded ? 'Hide' : 'Load more'"></span>
                          </button>
                        </div>
                      <% end %>
                    <% else %>
                      <p class="text-base font-semibold text-gray-600">No comments yet</p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <p>No posts available.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Sidebar (Admin only) -->
  <% if current_user&.admin? %>
    <div class="fixed top-0 right-0 w-[20%] h-full bg-white shadow-lg p-4">
      <%= render 'devise/shared/right_sidebar' %>
    </div>
  <% end %>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const sidebar = document.getElementById("sidebar");
      const toggleBtn = document.getElementById("sidebarToggle");
      const mainContent = document.getElementById("main-content");
      
      toggleBtn.addEventListener("click", function() {
        sidebar.classList.toggle("-translate-x-full");
        if (sidebar.classList.contains("-translate-x-full")) {
          mainContent.style.marginLeft = "0%";
        } else {
          mainContent.style.marginLeft = "15%";
        }
      });
    });
  </script>
</body>
