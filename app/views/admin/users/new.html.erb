<h1>Add User</h1>

<%= form_with model: @user, url: admin_users_path, local: true do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :role_ids, "Assign Roles" %><br>
    <% Role.all.each do |role| %>
      <%= check_box_tag "user[role_ids][]", role.id, @user.has_role?(role.name) %> <%= role.name %><br>
    <% end %>
  </div>

  <%= form.submit "Create User", class: "btn btn-success" %>
<% end %>
