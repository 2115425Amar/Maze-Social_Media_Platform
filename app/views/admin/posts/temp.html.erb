<!DOCTYPE html>
<html>
<title>Maze</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<body>

<!--Left Sidebar-->

 <%= render 'devise/shared/admin_left_side' %>


<!-- Right Sidebar -->
<div id="myRightSidebar" class="w3-sidebar w3-bar-block w3-card w3-animate-right" style="display: none; right: 0; width: 20%; position: fixed; top: 0; height: 100%; background-color: #fff; box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);">
  <button onclick="w3_close_right()" class="text-gray-500 hover:text-gray-700">Ã—</button>
 <!--username and photo-->
<div class="flex gap-4 items-center  rounded-2xl">
<!--      <img class="w-8 h-8 rounded-full" src="<%#= user_photo || 'earth.png' %>" alt="user photo">-->
      <img class="w-8 h-8 mx-2  rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo">
      <div class="flex flex-col ">
        <% if current_user %>
          <h2 class="text-lg mb-1"><%= current_user.first_name %> <%= current_user.last_name %></h2>
           <% if current_user.has_role?(:admin) %>
          <div class="text-sm ">Admin</div>
          <% end %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: 'text-lg font-semibold text-blue-600' %>
        <% end %>
      </div>
      <%# <img class="w-8 h-8 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo"> %>
</div>

  <div class="flex justify-between items-center p-2 ">
    <h3 class="text-lg font-semibold text-gray-700">Users List</h3>
    <div>...</div>
  </div>


  <div class="p-4 space-y-4">
    <% @users.each do |user| %>
      <div class="flex items-center space-x-3 p-2 hover:bg-gray-100 rounded-lg cursor-pointer">
        <img class="w-8 h-8 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo">
        <span class="text-gray-800 font-medium"><%= user.first_name %> <%= user.last_name %></span>
      </div>
    <% end %>
  </div>
</div>


<!-- Right Sidebar Toggle Button -->
<button id="openRightNav" class="fixed top-4 right-4 bg-blue-600 text-white px-3 py-2 rounded-lg shadow-md" onclick="w3_open_right()">â˜°</button>

<div id="main">
<div class="">
  <button id="openNav" class="" onclick="w3_open()">&#9776;</button>
   <%# <button id="openRightNav" class="" ">&#9776;</button> %>


<%# navbar %>
<nav class="flex justify-center md:py-2 mx-4">
  <div class="flex w-full md:px-6 justify-between items-center">

    <div class="flex gap-4 p-4 items-center ">
      <img src="<%= asset_path('Vector.svg') %>" class="w-8 md:w-10" alt="icon">
      <p class="text-2xl md:text-4xl font-serif font-semibold text-gray-800">Maze</p>
    </div>

    <div class="flex gap-6 p-3 items-center md:w-1/2 md:border-2 border-[#3333334D] rounded-2xl">
        <img src="<%= asset_path('search.svg') %>" class="w-6" alt="icon">
        <input class="text-lg font-['Montserrat'] font-semibold text-gray-600 focus:outline-none" placeholder="Search for something here...">
    </div>

   
</nav>


<div class="w3-container">
  <div class="bg-gray-200 p-4 m-6 rounded-xl  ">

 <!-- Post Section -->
        <%= form_with(model: Post.new, url: posts_path, local: true) do |form| %>
        <div class="bg-white rounded-lg mt-8 mx-[2%] my-5 b ">
            <div class="p-5 mx-6">
                <%= form.text_area :description, placeholder: "What's happening...?", class: "w-full px-4 py-3 bg-[#F5F6F8] rounded-xl focus:outline-none border border-black" %>
            </div>

            <%# public/private %>

            <div class="flex flex-col justify-between p-4  border-[#3333334D] mx-6">
                <span class="block text-base font-medium text-gray-900">Visibility</span>
                <div class="flex gap-4 pt-1 mt-2">
                    <div class="flex items-center">
                        <%= form.radio_button :public, "true", checked: true %>
                        <%= form.label :public_true, "Public", class: "text-gray-900 text-sm md:text-base ml-2" %>
                    </div>
                    <div class="flex items-center">
                        <%= form.radio_button :public, "false" %>
                        <%= form.label :public_false, "Private", class: "text-gray-900 text-sm md:text-base ml-2" %>
                    </div>
                </div>
            </div>

             <%# media icons %>
            <div class="flex justify-between p-4  border-[#3333334D] mx-6">
                <div class="flex gap-6 text-gray-600">
                    <button class="flex items-center gap-2">
                        <img src="<%= asset_path('video.svg')%>" class="w-5" alt="Live Video">
                        <span class="hidden sm:inline">Video</span>
                    </button>
                    <button class="flex items-center gap-2">
                        <img src=<%=asset_path('photo.svg')%> class="w-5" alt="Photo/Video">
                        <span class="hidden sm:inline">Photo/Video</span>
                    </button>
                    <button class="flex items-center gap-2">
                        <img src=<%=asset_path('feeling.svg')%> class="w-5" alt="Feeling">
                        <span class="hidden sm:inline">Feeling</span>
                    </button>
                </div>
                <%= form.submit "Post", class: "px-12 py-3 bg-[#4378DB] text-white font-medium rounded-lg" %>
            </div>
        </div>
        <% end %>



 
<!--<hr>-->
  <!-- Post Feed -->
  <div class="space-y-4">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="mx-[2%] bg-white rounded-xl p-4 ">
          <div class="flex justify-between items-start mb-3 mx-2">
            <div>
              <h3 class="text-lg mb-1"><%= post.user.first_name %> <%= post.user.last_name %></h3>
              <p class="text-sm text-[#666666]"> <%= time_ago_in_words(post.created_at) %> ago, <%= post.public ? "Public" : "Private" %></p></p>
            </div>

            <div class="flex gap-3">
                        <div class="relative inline-block gap-1" x-data="{ open: false }">
                            <div class="w-12">
                                <button @click="open = !open" type="button" class="inline-flex justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 hover:cursor-pointer text-sm font-semibold text-gray-900  ring-gray-400 ring-inset hover:bg-gray-50" id="menu-button" aria-expanded="true" aria-haspopup="true">
                                    <img src="<%= asset_path('dots.svg') %>" alt="">
                                </button>
                            </div>

                            <div x-show="open" @click.outside="open = false" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 z-10 mt-2 w-32 md:w-56 origin-top-right rounded-md bg-white ring-1 shadow-lg ring-black/5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                                <div class="py-1" role="none">
                                    <%= link_to "Show", "posts/#{post.id}", class:"block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800"%>
                                    <%= link_to "Edit", "posts/#{post.id}/edit", class:"block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800"%>
                                    <%= link_to "Delete", post_path(post), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "block px-4 py-2 text-sm md:text-lg text-gray-700 font-semibold hover:text-indigo-800" %>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>

        <p class="text-[#666666] mb-4 mx-2"><%= post.description %></p>

        <div class="text-sm text-[#666666] mb-3 mx-2">
          <%= post.likes.count %> Likes â€¢ <%= post.comments.count %> Comments
        </div>

        <div class="flex  gap-12 py-1 border-y border-[#3333334D] mx-2">
            

         <%= button_to post_likes_path(post), method: :post, remote: true, class: "like-button", id: "like-button-#{post.id}" do %>
              <div class="flex flex-row ">
              <img src="<%= asset_path('dil.svg') %>" class="like-icon" data-post-id="<%= post.id %>">
              <span>Like</span>
              </div>
            <% end %>

          <button class="text-gray-600">ðŸ’¬ Comment</button>
        </div>


         <%= form_with(model: [post, Comment.new], url: post_comments_path(post), local: true, class: "mt-3") do |form| %>
          <div class="flex space-x-2 p-2 bg-gray-100 rounded-lg">
            <%= form.text_field :content, placeholder: "Write a comment...", class: "w-[70%] flex-1 p-2 border rounded-lg focus:outline-none" %>
             <button class="bg-[#EAF4FF] hover:bg-[#99caff] p-3 rounded-lg text-lg font-medium hover:cursor-pointer"><img src="<%= asset_path('send.svg')%>" class="w-6" alt="arrow"></>
          </div>
        <% end %>

<div class="mt-4 mx-6 space-y-4" x-data="{ expanded: false }">
  <h1 class="w-full font-medium text-gray-400 text-lg md:text-2xl">Comments</h1>
  <hr class="w-full border-gray-300">

  <% if post.comments.any? %>
    <div>
      <% post.comments.each_with_index do |comment, index| %>
        <div x-show="expanded || <%= index < 2 %>" class="flex justify-between items-center bg-gray-200  rounded">
          <div class="flex flex-col p-2">
          <%# <span class="text-gray-800"> %>
            <strong><%= comment.user.first_name %> <%= comment.user.last_name %></strong>
            <div><%= comment.content %></div>
          <%# </span> %>
          </div>

          <div class="flex flex-col">
            <span> <img src="<%= asset_path('dil.svg') %>" alt="Like" class="w-5 h-5 mr-1"></span>

          <span class="text-sm text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
          </div>
        </div>
      <% end %>
    </div>
        <hr class="w-full border-gray-300"> 

    <% if post.comments.count > 3 %>
      <div class="flex justify-end">
        <button @click="expanded = !expanded"
          class="p-1 flex items-center text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400 transition">
          <span x-text="expanded ? 'Hide' : 'Load more'"></span>
        </button>
      </div>
    <% end %>
  <% else %>
    <p class="text-base font-semibold text-gray-600">No comments yet</p>
  <% end %>
</div>  
      </div>
    <% end %>
    <% else %>
      <p>No posts available.</p>
    <% end %>
  </div>
</div>
</div>
</div>

<script>
function w3_open() {
  document.getElementById("main").style.marginLeft = "15%";
  document.getElementById("mySidebar").style.width = "15%";
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("openNav").style.display = 'none';
}

function w3_close() {
  document.getElementById("main").style.marginLeft = "0%";
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("openNav").style.display = "inline-block";
}

// Right Sidebar Toggle
function w3_open_right() {
  document.getElementById("main").style.marginRight = "15%";
  document.getElementById("myRightSidebar").style.width = "15%";
  document.getElementById("myRightSidebar").style.display = "block";
  document.getElementById("openRightNav").style.display = 'none';
}

function w3_close_right() {
  document.getElementById("main").style.marginRight = "0%";
  document.getElementById("myRightSidebar").style.display = "none";
  document.getElementById("openRightNav").style.display = "inline-block";
}

</script>

</body>
</html>