<div class="container mx-auto mt-12 flex justify-center items-center h-80">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96 border border-black">
        <h2 class="text-xl font-semibold text-gray-700 text-center mb-4">Upload Users</h2>
        <%= form_with url: upload_users_manage_users_path, multipart: true, method: :post, local: true do |f| %>
            <div class="flex flex-col items-center space-y-4">
                <input type="file" name="upload_file" accept=".csv, .xlsx" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400" required>
                <%= f.submit "Upload", class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 w-full text-center" %>
            </div>
        <% end %>
    </div>
</div>


<%# ---------------------------------------------------------- %>
        <div id="flash-messages" class="text-center mb-4 mx-auto w-[90%]">
            <% if flash[:notice] %>
                <div class="bg-green-200 text-green-800 p-2 rounded"><%= flash[:notice] %></div>
            <% elsif flash[:alert] %>
                <div class="bg-red-200 text-red-800 p-2 rounded"><%= flash[:alert] %></div>
            <% end %>
        </div>
    </div>

