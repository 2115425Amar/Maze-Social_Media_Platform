<!-- Fixed Navbar -->
<!-- Added `fixed`, `top-0`, `left-0`, `w-full`, and `z-40` to make the navbar stick to the top of the page -->
<nav  class="fixed top-0 md:ml-0 md:w-[82%] z-40 bg-white">
  <div class="flex justify-center py-2 ">
    <div class="flex w-full justify-between items-center">
      <!-- Search Bar -->
      <div class="flex gap-2 p-2 md:p-3 items-center w-[80%]  border-2 border-[#3333334D] rounded-2xl ">
        <img src="<%= asset_path('search.svg') %>" class="w-4 md:w-6" alt="icon">
        <input class="text-sm md:text-lg font-['Montserrat'] text-sm md:font-semibold text-gray-600 focus:outline-none md:w-full " placeholder="Search for something here...">
      </div>

      <!-- User Info -->
      <div class="flex gap-0 md:gap-4 p-2 items-center md:border-2 border-[#3333334D] rounded-2xl ml-2">
        <div class="flex flex-col">
          <% if current_user %>
            <!-- User Name -->
            <h2 class="text-sm md:text-lg mb-1">
              <%= current_user.first_name %> <%= current_user.last_name %>
            </h2>
            <!-- User Role -->
            <% if current_user.has_role?(:admin) %>
              <div class="text-[8%] md:text-sm">Admin</div>
            <% else %>
              <div class="text-[8%] md:text-sm">User</div>
            <% end %>
          <% end %>
        </div>
        <!-- User Avatar -->
        <%= image_tag current_user.avatar_url, class: "w-6 h-6 md:w-10 md:h-10 rounded-full" %>
      </div>
    </div>
  </div>
</nav>