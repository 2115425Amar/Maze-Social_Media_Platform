
  <!-- Right Sidebar -->

  <% if current_user&.admin? %>
    <!-- Right Sidebar (Admin only) -->
    <div class="fixed top-0 right-0 w-[20%] h-full bg-white shadow-lg p-4">
      <!-- User Info -->
      <div class="flex items-center gap-4 pb-4 border-b">
        <img class="w-10 h-10 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo">
        <div>
          <% if current_user %>
            <h2 class="text-lg font-semibold text-gray-900"><%= current_user.first_name %> <%= current_user.last_name %></h2>
            <% if current_user.has_role?(:admin) %>
              <div class="text-sm text-gray-500">Admin</div>
            <% end %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: 'text-lg font-semibold text-blue-600' %>
          <% end %>
        </div>
      </div>

      <!-- Users List -->
      <div class="pt-4">
        <h3 class="text-lg font-semibold text-gray-700 mb-3">Users List</h3>
        <div class="space-y-3">
          <% if @users.present? %>
            <% @users.each do |user| %>
              <div class="flex items-center space-x-3 p-2 hover:bg-[#377DFF] hover:text-white rounded-lg cursor-pointer">
                <img class="w-8 h-8 rounded-full" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="user photo">
                <span class="text-gray-800 font-medium"><%= user.first_name %> <%= user.last_name %></span>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 text-sm">No users found.</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>